<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My App</title>
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.css">
</head>
<body>
    <h1>H·ªçc NodeJs!</h1>
    <div><%= new Date() %></div>
    <br/>
    <div>Title: <%= title %></div>
    <div>
        <% for (var i = 0; i < items.length; i++) { %>
            <li>
                <span style="width: 65px;display: inline-block;">No.: <%= items[i].id %></span>
                <span style="width: 300px;display: inline-block;"> - Name: <%= items[i].desc %></span>
                <span style="width: 30px;display: inline-block;"><a href="/delete/<%= items[i]._id %>">X</a></span>
            </li>
        <% } %>
    </div>
    <div>
        <form action="/add" method="post">
            Item: <input type="text" name="newItem" />
            <button type="submit">Add new Item</button>
        </form>
    </div>

    <script src="jquery/dist/jquery.js"></script>
    <script src="bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>